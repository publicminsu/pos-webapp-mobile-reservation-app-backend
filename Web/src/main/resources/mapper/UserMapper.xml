<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hknusc.web.repository.UserRepository">
    <select id="getUsers" resultType="com.hknusc.web.dto.user.UserDTO">
        SELECT *
        FROM ACCOUNT
    </select>
    <insert id="saveUser" parameterType="com.hknusc.web.dto.user.UserSaveDTO">
        INSERT INTO ACCOUNT(EMAIL, PASSWORD, NICKNAME, PHONE_NUMBER)
        VALUES (#{email}, #{password}, #{nickname}, #{phoneNumber})
    </insert>
    <select id="getUser" parameterType="int" resultType="com.hknusc.web.dto.user.UserDTO">
        SELECT *
        FROM ACCOUNT
        WHERE ID = #{id}
    </select>
    <select id="getUserByUserEmail" parameterType="string" resultType="com.hknusc.web.dto.user.UserDTO">
        SELECT *
        FROM ACCOUNT
        WHERE EMAIL = #{email}
    </select>
    <update id="editUser" parameterType="com.hknusc.web.dto.user.UserDBEditDTO">
        UPDATE ACCOUNT
        SET (EMAIL, NICKNAME, PHONE_NUMBER, WISH_LIST, COUPON_LIST, PAYMENT_CARD)
                = (#{email}, #{nickname}, #{phoneNumber}, #{wishList}, #{couponList}, #{paymentCard})
        WHERE ID = #{id}
    </update>
    <delete id="deleteUser" parameterType="int">
        DELETE
        FROM ACCOUNT
        WHERE ID = #{id}
    </delete>
    <select id="getDeletedUsers" resultType="com.hknusc.web.dto.user.DeletedUserDTO">
        SELECT *
        FROM DELETED_ACCOUNT
    </select>
    <insert id="saveDeletedUser" parameterType="com.hknusc.web.dto.user.DeletedUserDTO">
        INSERT INTO DELETED_ACCOUNT(EMAIL, PHONE_NUMBER, DELETE_TIME)
        VALUES (#{email}, #{phoneNumber}, #{deleteTime})
    </insert>
    <select id="checkEmail" parameterType="string" resultType="int">
        SELECT COUNT(*)
        FROM ACCOUNT
        WHERE EMAIL = #{email}
    </select>
    <select id="checkNickname" parameterType="string" resultType="int">
        SELECT COUNT(*)
        FROM ACCOUNT
        WHERE NICKNAME = #{nickname}
    </select>
    <select id="checkPhoneNumber" parameterType="string" resultType="int">
        SELECT COUNT(*)
        FROM ACCOUNT
        WHERE PHONE_NUMBER = #{phoneNumber}
    </select>
</mapper>