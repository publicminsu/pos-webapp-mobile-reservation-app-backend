<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hknusc.web.repository.ReviewRepository">
    <select id="getReviews" parameterType="int" resultType="com.hknusc.web.dto.review.ReviewDTO">
        SELECT *
        FROM REVIEW
        WHERE STORE_ID = #{storeId}
    </select>
    <select id="getReview" parameterType="int" resultType="com.hknusc.web.dto.review.ReviewDTO">
        SELECT *
        FROM REVIEW
        WHERE ID = #{reviewId}
          AND STORE_ID = #{storeId}
    </select>
</mapper>
